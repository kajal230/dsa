class Solution {
public:
    void sortColors(vector<int>& nums) {
        int n=nums.size();
        int cnt1=0,cnt2=0,cnt3=0;
        for(int i=0; i<n; i++){
            if(nums[i]==0)cnt1++;
            else if(nums[i]==1)cnt2++;
            else cnt3++;
        }
int i = 0;
        while (cnt1--) nums[i++] = 0;
        while (cnt2--) nums[i++] = 1;
        while (cnt3--) nums[i++] = 2;
        
        
    }
};
